---
import { getEntry, render } from "astro:content";
import MainLayout from "../layouts/MainLayout.astro";
import TableOfContents from "../components/TableOfContents.astro";
import { buildTocItems } from "../utils/toc";

const draftDocument = await getEntry("documents", "draft");

if (!draftDocument) {
  throw new Error("Missing draft document at src/content/documents/draft.md");
}

const { Content, headings } = await render(draftDocument);
const tocItems = buildTocItems(headings);
---

<MainLayout
  title={`${draftDocument.data.title} | New Constitution Project`}
  description={draftDocument.data.description ??
    "The full text of a new constitution for a sovereign Federation of States."}
>
  <h1
    class="bg-meander_dark [background-size:25px,25px] bg-repeat-x text-center text-5xl font-semibold pt-16"
  >
    {draftDocument.data.title}
  </h1>
  <p class="text-center text-yellow-500">Early draft</p>

  <div class="flex justify-center">
    <TableOfContents items={tocItems} />

    <article
      class="document-content flex-1 mx-2 px-3 sm:px-0 my-5 lg:my-16 max-w-5xl"
    >
      <Content />
    </article>

    <div class="hidden xl:block w-64"></div>
  </div>
</MainLayout>
